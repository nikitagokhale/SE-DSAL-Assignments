#include <iostream>
#include<string>
#define SIZE 10
using namespace std;

class HashEntry
{
protected:
	long int tele_num;
	string name;

public:
	HashEntry(long int tele_num = 0, string name = "\0")
	{
		this->tele_num = tele_num;
		this->name = name;
	}
	friend class HashTable;
};

